<div class="container-fluid">
    <div class="row">
        <div style="background: white; display: inline; width: 100%">
            <span class="glyphicon glyphicon glyphicon-search" aria-hidden="true" style="width: 4%; float: left; text-align: center; font-size: 20px; font-weight: 50; line-height: 30px; color: #585858; padding: 1px 0;"></span>
            {{input key-up="setTheThing" value=movieToSearch action=setTheThing type="text" name="text" placeholder="Search Movies" class="movie-search-bar" autofocus="autofocus"}}
        </div>
    </div>
</div>

<div style="background: #393939; width: 100%; min-height: 300px; color: white; padding: 20px; font-size: 2em;">
    <!-- TODO: Make this into a component -->
    {{#each movies as |movie|}}
        {{#if movie.hasRating}}
            <div class="row" style="float: left;">
                <div class="col-xs-6" style="margin-bottom: 20px;">
                    <div class="row" style="background: #c1c1c1; padding: 10px;">
                        <div class="col-xs-4">
                            <img width="100%;" src="http://image.tmdb.org/t/p/w185/{{unbound movie.poster_path}}" alt="{{movie.title}}" style="box-shadow: 5px 5px 5px #888888;" />
                        </div>
                        <div class="col-xs-8">
                            <div class="row">
                                <div style="color: #393939; text-decoration: underline;">
                                    <h2>{{movie.title}}</h2>
                                </div>
                            </div>
                            <div class="row">
                                <div style="color: #393939;">
                                    <h3>{{movie.overview}}</h3>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div style="color: #393939; width: 100%; text-align: right; padding-right: 15px;">
                                    <h3>Rating: {{movie.vote_average}} / 10</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}

    {{/each}}
</div>
